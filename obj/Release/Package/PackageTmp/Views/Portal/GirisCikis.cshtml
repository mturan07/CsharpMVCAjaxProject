@model IEnumerable<WebApp.Data.LogGirisCikis>

@{
    ViewBag.Title = "Giriş Çıkış Zamanları";
}

<!-- Main content -->
<section class="content">

    <p>
        <input type="button" class="btn btn-primary" value="Kullanıcı Listesi" 
               onclick="location.href='@Url.Action("KullaniciListesi", "Portal")'" />
    </p>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <div class="box-body table-responsive no-padding">

            <div class="col-sm-12">
                <table id="dataTable" class="table table-responsive table-striped table-hover dataTable" role="grid" aria-describedby="dataTable_info">
                    <thead style="font-weight: bold">
                        <tr>
                            <td>Kullanıcı Adı</td>
                            <td>Giriş Giriş Zamanı</td>
                            <td>Çıkış Zamanı</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.KullaniciAdi</td>
                                    <td>
                                        @{
                                            if (@item.GirisTar != null)
                                            {
                                                string GirisTarihi =
                                                @item.GirisTar == null ? "" : ((DateTime)@item.GirisTar).ToString("dd.MM.yyyy HH:mm");
                                                <text>@GirisTarihi</text>
                                            }
                                        }
                                    </td>
                                    <td>
                                        @{
                                            if (@item.CikisTar != null)
                                            {
                                                string CikisTarihi =
                                                @item.CikisTar == null ? "" : ((DateTime)@item.CikisTar).ToString("dd.MM.yyyy HH:mm");
                                                <text>@CikisTarihi</text>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        @*<tr>
                                <td>Telefon No</td>
                                <td>Adı</td>
                                <td>Soyadı</td>
                                <td>Cinsiyet</td>
                                <td>Doğum Yeri</td>
                                <td>Doğum Tarihi</td>
                                <td>Adres İl</td>
                                <td>Adres İlçe</td>
                                <td>Adres Mahalle</td>
                                <td>Adres Cadde/Sokak</td>
                                <td>Kapı No</td>
                                <td>Kara Liste</td>
                            </tr>*@
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Kutu alt kısmı
            </div>*@
        <!-- /.box-footer-->
    </div>

</section>

<!-- /.content -->

