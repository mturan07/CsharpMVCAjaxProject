@model IEnumerable<WebApp.Data.Kayitlar>

@{
    ViewBag.Title = "Ad Soyad Ara";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
            Sayfa Başlığı
            <small>Sayfa Alt Başlığı</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Portal</a></li>
            <li><a href="#">Giriş</a></li>
            <li class="active">Boş Sayfa</li>
        </ol>*@
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Ad Soyad Ara</h3>
            @*<div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fa fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove">
                        <i class="fa fa-times"></i>
                    </button>
                </div>*@
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("AdSoyadAra", "Portal", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

            <input type="hidden" id="tutIlceId" name="tutIlId" value="@ViewBag.secIl">
            <input type="hidden" id="tutIlceId" name="tutIlceId" value="@ViewBag.secIlce">

            <div class="box-body">

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="form-group">
                            <label>Adı</label>
                            <input name="inputAdi" id="inputAdi" placeholder="Adı Giriniz" class="form-control"
                                   @( String.IsNullOrEmpty(ViewBag.inputAdi) ? "" : "value = " + ViewBag.inputAdi ) />
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="form-group">
                            <label>Soyadı</label>
                            <input name="inputSoyadi" id="inputSoyadi" placeholder="Soyadı Giriniz" class="form-control"
                                   @( String.IsNullOrEmpty(ViewBag.inputSoyadi) ? "" : "value = " + ViewBag.inputSoyadi ) />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="form-group">
                            <label>İl</label>
                            <select name="secilenIl" id="secilenIl" class="form-control"></select>
                        </div>
                    </div>

                    <div class="col-xs-12 col-sm-6 col-md-4">
                        <div class="form-group">
                            <label>İlçe</label>
                            <select name="secilenIlce" id="secilenIlce" class="form-control"></select>
                        </div>
                    </div>
                </div>

                <button id="btnListele" type="submit" class="btn btn-primary">Listele</button>
            </div>
        }
    </div>

    <div class="box box-primary @(Model == null ? "hidden" : "")">
        <div class="box-header with-border">
            <h3 class="box-title">Arama Sonuçları</h3>
        </div>
        <div class="box-body table-responsive no-padding">

            <div class="col-sm-12">
                <table id="dataTable" class="table table-responsive table-striped table-hover dataTable" role="grid" aria-describedby="dataTable_info">
                    <thead style="font-weight: bold">
                        <tr>
                            <td>Telefon No</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Cinsiyet</td>
                            <td>Doğum Yeri</td>
                            <td>Doğum Tarihi</td>
                            <td>Adres İl</td>
                            <td>Adres İlçe</td>
                            <td>Adres Mahalle</td>
                            <td>Adres Cadde/Sokak</td>
                            <td>Kapı No</td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Telefon</td>
                                    <td>@item.Adi</td>
                                    <td>@item.Soyadi</td>
                                    <td>@item.Cinsiyet</td>
                                    <td>@item.DogumYeri</td>
                                    <td>
                                        @{
                                            string Tarih =
                                                @item.DogumTarihi == null ? "" : ((DateTime)@item.DogumTarihi).ToString("dd.MM.yyyy");
                                            <text>@Tarih</text>
                                        }
                                    </td>
                                    <td>@item.Adresil</td>
                                    <td>@item.Adresilce</td>
                                    <td>@item.AdresMahalle</td>
                                    <td>@item.AdresCaddeSokak</td>
                                    <td>@item.AdresKapiNo</td>
                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        @*<tr>
                                <td>Telefon No</td>
                                <td>Adı</td>
                                <td>Soyadı</td>
                                <td>Cinsiyet</td>
                                <td>Doğum Yeri</td>
                                <td>Doğum Tarihi</td>
                                <td>Adres İl</td>
                                <td>Adres İlçe</td>
                                <td>Adres Mahalle</td>
                                <td>Adres Cadde/Sokak</td>
                                <td>Kapı No</td>
                            </tr>*@
                    </tfoot>
                </table>
            </div>

        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Kutu alt kısmı
            </div>*@
        <!-- /.box-footer-->
    </div>

</section>

<!-- /.content -->

