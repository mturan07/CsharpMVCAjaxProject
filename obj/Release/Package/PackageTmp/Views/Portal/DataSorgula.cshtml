@*@model WebApp.ViewModel.ViewModelDataSorgula*@

@{
    ViewBag.Title = "DataSorgula";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
            Sayfa Başlığı
            <small>Sayfa Alt Başlığı</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Portal</a></li>
            <li><a href="#">Giriş</a></li>
            <li class="active">Boş Sayfa</li>
        </ol>*@
</section>

<!-- Main content -->
<section class="content">

    <div class="row">
        <div class="col-md-6">

            <div class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Data Sorgula</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("DataSorgula", "Portal", FormMethod.Post, 
                    new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="box-body">

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>İl Seçiniz</label>
                                    <select name="secilenIl" id="secilenIl" class="form-control"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>İlçe Seçiniz</label>
                                    <select name="secilenIlce" id="secilenIlce" class="form-control"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Mahalle Seçiniz</label>
                                    <select name="secilenMah" id="secilenMah" class="form-control"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Yaş Aralığı</label><br />
                                    <div class="input-group">
                                        <input type="text" id="yasKucuk" name="yasKucuk" class="form-control" maxlength="3" placeholder="En Az" />
                                        <span class="input-group-addon">-</span>
                                        <input type="text" id="yasBuyuk" name="yasBuyuk" class="form-control" maxlength="3" placeholder="En Fazla" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Cinsiyet</label><br />
                                    <label class="radio-inline">
                                        <input type="radio" value="" id="radioCinsiyet" name="radioCinsiyet" checked>Tümü
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" value="K" id="radioCinsiyet" name="radioCinsiyet">Kadın
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" value="E" id="radioCinsiyet" name="radioCinsiyet">Erkek
                                    </label>
                                </div>
                            </div>
                        </div>

                        <button id="btnListele" type="button" class="btn btn-primary">Listele</button>

                    </div>
                    <!-- /.box-body -->
                }
            </div>
        </div>

        <div class="col-md-6">
            <div id="divGizli" class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Arama Sonuçları</h3>
                </div>
                <div class="box-body">

                    <div class="row">
                        <div id="divSehir" class="col-sm-12">
                            <h4>İlinde bulunan kişi sayısı : 0</h4>
                            @*@(String.Format("{0:n0}", ViewBag.SehirToplam == null ? "0" : ViewBag.SehirToplam))*@
                        </div>
                    </div>

                    <div class="row">
                        <div id="divIlce" class="col-sm-12">
                            <h4>İlçesinde bulunan kişi sayısı : 0</h4>
                            @*@(String.Format("{0:n0}", ViewBag.IlceToplam == null ? "0" : ViewBag.IlceToplam))*@
                        </div>
                    </div>

                    <div class="row">
                        <div id="divMahalle" class="col-sm-12">
                            <h4>Mahallesinde bulunan kişi sayısı : 0</h4>
                            @*@(String.Format("{0:n0}", ViewBag.MahalleToplam == null ? "0" : ViewBag.MahalleToplam))*@
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                @*<div class="box-footer">
                        Kutu alt kısmı
                    </div>*@
                <!-- /.box-footer-->
            </div>
        </div>
    </div>

</section>

<!-- /.content -->

@section PageScriptsHead
{

}

@section PageScriptsBody
{
    @*<script src="~/Content/js/easyHTTP.js"></script>*@
    <script src="~/Content/js/app.js"></script>
}
