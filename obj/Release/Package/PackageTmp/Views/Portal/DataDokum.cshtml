<!-- Main content -->
<section class="content">

    <div class="row">

        <div class="col-md-6">

            <div id="divDataDokum" class="box box-info">
                <div class="box-header with-border">
                    <h3 class="box-title">Data Döküm</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                @using (Html.BeginForm("DataDokum", "Portal", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <input type="hidden" id="hiKulAdi" value="@ViewBag.KulAdi" />

                    <div class="box-body">

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>Cinsiyet</label><br />
                                    <label class="radio-inline">
                                        <input type="radio" value="" id="radioCinsiyet" name="radioCinsiyet" checked>Tümü
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" value="K" id="radioCinsiyet" name="radioCinsiyet">Kadın
                                    </label>
                                    <label class="radio-inline">
                                        <input type="radio" value="E" id="radioCinsiyet" name="radioCinsiyet">Erkek
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Yaş Aralığı</label><br />
                                    <div class="input-group">
                                        <input type="text" id="yasKucuk" name="yasKucuk" class="form-control" maxlength="3" placeholder="En Az" />
                                        <span class="input-group-addon">-</span>
                                        <input type="text" id="yasBuyuk" name="yasBuyuk" class="form-control" maxlength="3" placeholder="En Fazla" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>Adet</label>
                                    <input type="text" name="girilenAdet" id="girilenAdet" class="form-control" required>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>İl Seçiniz</label>
                                    <select name="secilenIl" id="secilenIl" class="form-control"></select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <label>İlçe Seçiniz</label>
                                    <select name="secilenIlce" id="secilenIlce" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <button id="btnIlceEkle" class="btn btn-sm btn-success">Ekle</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>İlçeler</label>
                                    <select id="selectIlce" multiple="multiple" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <button id="btnIlceCikar" class="btn btn-sm btn-danger">Çıkar</button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Mahalleler</label>
                                    <select id="selectMahListe" multiple="" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <button id="btnMahEkle" class="btn btn-sm btn-success">Ekle</button>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Seçilenler</label>
                                    <select id="selectMahHazirla" multiple="" class="form-control"></select>
                                </div>
                                <div class="form-group">
                                    <button id="btnMahCikar" class="btn btn-sm btn-danger">Çıkar</button>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-md-12">
                                <button id="btnListele" class="btn btn-warning">Listele</button>
                                <a id="btnIndir" class="btn btn-info btn-large pull-right ml-5" style="display: none" href="#">Dosyayı İndir</a>
                                <button id="btnHazirla" class="btn btn-primary pull-right" style="margin-right: 5px" disabled>Hazırla</button>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                }
            </div>

        </div>
        <div class="col-md-6">
            <div id="divGizli" class="box box-primary" )">
                <div class="box-header with-border">
                    <h3 class="box-title">Arama Sonuçları</h3>
                </div>
                <div class="box-body">

                    <div class="row">
                        <div id="divSehir" class="col-sm-12">
                            <table id="dataTable" class="table table-striped table-hover table-responsive">

                                <thead>
                                    <tr>
                                        <td><strong>Mahalle Adı</strong></td>
                                        <td><strong>Kişi Sayısı</strong></td>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                                <tfoot></tfoot>
                            </table>
                        </div>
                    </div>

                </div>
                <!-- /.box-body -->
                @*<div class="box-footer">
                        Kutu alt kısmı
                    </div>*@
                <!-- /.box-footer-->
            </div>

        </div>
    </div>
</section>

<!-- /.content -->

