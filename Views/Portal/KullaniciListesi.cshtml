@model IEnumerable<WebApp.Data.Kullanici>

@{
    ViewBag.Title = "Kullanıcı Listesi";
}

<!-- Main content -->
<section class="content">

    <p>
        <input type="button" class="btn btn-primary" value="Kullanıcı Ekle" onclick="location.href='@Url.Action("KullaniciEkle", "Portal")'" />
    </p>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">@ViewBag.Title</h3>
        </div>
        <div class="box-body table-responsive no-padding">

            <div class="col-sm-12">
                <table id="dataTable" class="table table-responsive table-striped table-hover dataTable" role="grid" aria-describedby="dataTable_info">
                    <thead style="font-weight: bold">
                        <tr>
                            <td>Kullanıcı Adı</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Aktif</td>
                            <td>Seviye</td>
                            <td>Son Login Zamanı</td>
                            <td>Döküm Alabilsin</td>
                            <td>Ad Soyad Sorgulasın</td>
                            <td></td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.KulAdi</td>
                                    <td>@item.Adi</td>
                                    <td>@item.Soyadi</td>
                                    <td>
                                        @if ((bool)item.Aktif == true)
                                        {
                                            <text>Evet</text>
                                        }
                                        else
                                        {
                                            <text>Hayır</text>
                                        }
                                    </td>
                                    <td>@item.Seviye</td>
                                    <td>
                                        @{
                                            string Tarih =
                                            @item.SonGirisTar == null ? "" : ((DateTime)@item.SonGirisTar).ToString("dd.MM.yyyy HH:mm");
                                            <text>@Tarih</text>
                                        }
                                    </td>
                                    <td>
                                        @if ((bool)item.DokumAlabilsin == true)
                                        {
                                            <text>Evet</text>
                                        }
                                        else
                                        {
                                            <text>Hayır</text>
                                        }
                                    </td>
                                    <td>
                                        @if ((bool)item.AdSoyadSorgulasin == true)
                                        {
                                            <text>Evet</text>
                                        }
                                        else
                                        {
                                            <text>Hayır</text>
                                        }
                                    </td>
                                    <td>
                                        @*<button id="btnKaraListeEkle" class="btn btn-primary"
                                            onclick="btnKaraListeEkle(@item.Id, @item.Telefon)">Ekle</button>*@
                                        <button class="btn btn-primary"
                                                onclick="location.href='@Url.Action("KullaniciDuzenle", "Portal", new { id = item.Id } )'">
                                            Düzenle
                                        </button>
                                    </td>
                                    <td>
                                        <button class="btn btn-warning"
                                                onclick="location.href='@Url.Action("GirisCikis", "Portal", new { id = item.Id } )'">
                                            Giriş Çıkış Logu
                                        </button>
                                        @*<button id="btnKaraListeCikar" class="btn btn-warning"
                                                    onclick="window.location.href = '/Portal/KaraListeCikar/@item.Id'">
                                                Çıkar
                                            </button>*@
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        @*<tr>
                                <td>Telefon No</td>
                                <td>Adı</td>
                                <td>Soyadı</td>
                                <td>Cinsiyet</td>
                                <td>Doğum Yeri</td>
                                <td>Doğum Tarihi</td>
                                <td>Adres İl</td>
                                <td>Adres İlçe</td>
                                <td>Adres Mahalle</td>
                                <td>Adres Cadde/Sokak</td>
                                <td>Kapı No</td>
                                <td>Kara Liste</td>
                            </tr>*@
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Kutu alt kısmı
            </div>*@
        <!-- /.box-footer-->
    </div>

</section>

<!-- /.content -->

