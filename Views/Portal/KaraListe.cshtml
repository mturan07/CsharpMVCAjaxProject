@model IEnumerable<WebApp.Data.Kayitlar>

@{
    ViewBag.Title = "Kara Liste";
}

<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
            Sayfa Başlığı
            <small>Sayfa Alt Başlığı</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Portal</a></li>
            <li><a href="#">Giriş</a></li>
            <li class="active">Boş Sayfa</li>
        </ol>*@
</section>

<!-- Main content -->
<section class="content">

    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Telefon No</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("KaraListe", "Portal", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="box-body">
                <div class="input-group col-sm-4">
                    <input type="text" name="telefonno" placeholder="Telefon No Giriniz" maxlength="10" class="form-control">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary">Sorgula</button>
                    </span>
                </div>
                <h2 class="text-danger">@ViewBag.Mesaj</h2>
            </div>
            <!-- /.box-body -->
        }
    </div>

    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Arama Sonuçları</h3>
        </div>
        <div class="box-body table-responsive no-padding">

            <div class="col-sm-12">
                <table id="dataTable" class="table table-responsive table-striped table-hover dataTable" role="grid" aria-describedby="dataTable_info">
                    <thead style="font-weight: bold">
                        <tr>
                            <td>Telefon No</td>
                            <td>Adı</td>
                            <td>Soyadı</td>
                            <td>Cinsiyet</td>
                            <td>Doğum Yeri</td>
                            <td>Doğum Tarihi</td>
                            <td>Adres İl</td>
                            <td>Adres İlçe</td>
                            <td>Adres Mahalle</td>
                            <td>Adres Cadde/Sokak</td>
                            <td>Kapı No</td>
                            <td>Kara Liste</td>
                            <td></td>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Telefon</td>
                                    <td>@item.Adi</td>
                                    <td>@item.Soyadi</td>
                                    <td>@item.Cinsiyet</td>
                                    <td>@item.DogumYeri</td>
                                    <td>
                                        @{
                                            string Tarih =
                                            @item.DogumTarihi == null ? "" : ((DateTime)@item.DogumTarihi).ToString("dd.MM.yyyy");
                                            <text>@Tarih</text>
                                        }
                                    </td>
                                    <td>@item.Adresil</td>
                                    <td>@item.Adresilce</td>
                                    <td>@item.AdresMahalle</td>
                                    <td>@item.AdresCaddeSokak</td>
                                    <td>@item.AdresKapiNo</td>
                                    <td>
                                        @if ((bool)item.KaraListe == true)
                                        {
                                            <text>Evet</text>
                                        }
                                        else
                                        {
                                            <text>Hayır</text>

                                        }
                                    </td>
                                    <td>
                                        @*<button id="btnKaraListeEkle" class="btn btn-primary"
                                            onclick="btnKaraListeEkle(@item.Id, @item.Telefon)">Ekle</button>*@
                                        <button id="btnKaraListeEkle" class="btn btn-primary"
                                                onclick="location.href='@Url.Action("KaraListeEkle", "Portal", new { kayitId = item.Id } )'">
                                            Ekle
                                        </button>
                                    </td>
                                    <td>
                                        <button id="btnKaraListeCikar" class="btn btn-warning"
                                                onclick="location.href='@Url.Action("KaraListeCikar", "Portal", new { kayitId = item.Id } )'">
                                            Çıkar
                                        </button>
                                        @*<button id="btnKaraListeCikar" class="btn btn-warning"
                                                    onclick="window.location.href = '/Portal/KaraListeCikar/@item.Id'">
                                                Çıkar
                                            </button>*@
                                    </td>

                                </tr>
                            }
                        }
                    </tbody>
                    <tfoot>
                        @*<tr>
                                <td>Telefon No</td>
                                <td>Adı</td>
                                <td>Soyadı</td>
                                <td>Cinsiyet</td>
                                <td>Doğum Yeri</td>
                                <td>Doğum Tarihi</td>
                                <td>Adres İl</td>
                                <td>Adres İlçe</td>
                                <td>Adres Mahalle</td>
                                <td>Adres Cadde/Sokak</td>
                                <td>Kapı No</td>
                                <td>Kara Liste</td>
                            </tr>*@
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.box-body -->
        @*<div class="box-footer">
                Kutu alt kısmı
            </div>*@
        <!-- /.box-footer-->
    </div>

</section>

<!-- /.content -->

